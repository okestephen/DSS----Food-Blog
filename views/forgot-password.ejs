<%- include("partials/header.ejs") %>
<main class="container">
<div class="left"></div>
<form class="auth-content" action="/forgot-password" method="post">
    <h2>Forgot Password</h2>
    <% if (error){ %> 
       <div class="msg warning">
           <li><%= error %></li>
       </div>
   <% } %>
   <% if (message){ %> 
       <div class="msg warning">
           <li><%= message %></li>
       </div>
   <% } %>
    <div class="auth-items">
        <label for="email">Email: </label>
        <input type="email" name="email" required />
    </div>
    <div class="auth-items">
        <button class="btn btn-big" type="submit">Send Reset Link</button>
    </div>
    
</form>
<div class="right"></div>
</main>

<%- include("partials/footer.ejs") %>
